// PostgreSQL Version (for Supabase Database)
// Simplified schema without NextAuth tables

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  name     String?
  email    String @unique
  password String? // Optional: Remove if no authentication needed
  Game     Game[]

  @@map("user")
}

model Game {
  id          String     @id @default(cuid())
  userId      String
  timeStarted DateTime   @default(now())
  topic       String
  timeEnded   DateTime?
  gameType    GameType
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions   Question[]

  @@index([userId])
  @@map("game")
}

model TopicCount {
  id    String @id @default(cuid())
  topic String @unique
  count Int

  @@map("topic_count")
}

model Question {
  id                String   @id @default(cuid())
  question          String
  answer            String
  gameId            String
  options           Json?
  percentageCorrect Float?
  isCorrect         Boolean?
  questionType      GameType
  userAnswer        String?
  game              Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([gameId])
  @@map("question")
}

enum GameType {
  mcq
  open_ended
}
