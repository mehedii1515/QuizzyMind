// PostgreSQL Version (for Supabase Database)
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // CRITICAL: Added missing password field
  Game          Game[]
  accounts      account[]
  sessions      session[]

  @@map("user")
}

model Game {
  id          String     @id @default(cuid())
  userId      String
  timeStarted DateTime   @default(now())
  topic       String
  timeEnded   DateTime?
  gameType    GameType
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions   Question[]

  @@index([userId])  // Added index for performance
  @@map("game")
}

model TopicCount {
  id    String @id @default(cuid())
  topic String @unique
  count Int

  @@map("topic_count")  // Match original naming
}

model Question {
  id                String   @id @default(cuid())
  question          String
  answer            String
  gameId            String
  options           Json?    // FIXED: Should be Json type, not String
  percentageCorrect Float?
  isCorrect         Boolean?
  questionType      GameType
  userAnswer        String?
  game              Game     @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@index([gameId])  // Added index for performance
  @@map("question")
}

model account {
  id                String  @id @default(cuid())  // FIXED: Added @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])  // Added index for performance
  @@map("account")   // Added table mapping
}

model session {
  id           String   @id @default(cuid())  // FIXED: Added @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])  // Added index for performance
  @@map("session")   // Added table mapping
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtoken")  // Match original naming
}

enum GameType {
  mcq
  open_ended
}
